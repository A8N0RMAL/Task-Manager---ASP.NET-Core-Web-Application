@model IEnumerable<TaskItem>

@{
    ViewData["Title"] = "Task List";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>@ViewData["Title"]</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add New Task
        </a>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            <h5 class="card-title mb-0">Search & Filter Tasks</h5>
        </div>
        <div class="card-body">
            <form asp-action="Index" method="get" class="row g-3">
                <div class="col-md-3">
                    <input type="text" name="searchString" class="form-control"
                           placeholder="Search tasks..." value="@ViewData["CurrentFilter"]" />
                </div>
                <div class="col-md-2">
                    <select name="categoryFilter" class="form-select" asp-items="@(new SelectList(ViewBag.Categories))">
                        <option value="">All Categories</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <select name="priorityFilter" class="form-select">
                        <option value="">All Priorities</option>
                        <option value="Low">Low</option>
                        <option value="Medium">Medium</option>
                        <option value="High">High</option>
                        <option value="Urgent">Urgent</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <select name="statusFilter" class="form-select">
                        <option value="">All Status</option>
                        <option value="Completed">Completed</option>
                        <option value="Incomplete">Incomplete</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <button type="submit" class="btn btn-outline-primary me-2">Apply Filters</button>
                    <a asp-action="Index" class="btn btn-outline-secondary">Clear</a>
                </div>
            </form>
        </div>
    </div>

    @{
        var totalTasks = Model.Count();
        var completedTasks = Model.Count(t => t.IsCompleted);
        var pendingTasks = totalTasks - completedTasks;
        var overdueTasks = Model.Count(t => !t.IsCompleted && t.DueDate < DateTime.Today);
    }

    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-white bg-primary">
                <div class="card-body">
                    <h5 class="card-title">@totalTasks</h5>
                    <p class="card-text">Total Tasks</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-success">
                <div class="card-body">
                    <h5 class="card-title">@completedTasks</h5>
                    <p class="card-text">Completed</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-warning">
                <div class="card-body">
                    <h5 class="card-title">@pendingTasks</h5>
                    <p class="card-text">Pending</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-danger">
                <div class="card-body">
                    <h5 class="card-title">@overdueTasks</h5>
                    <p class="card-text">Overdue</p>
                </div>
            </div>
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="row">
            @foreach (var task in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 @(task.IsCompleted ? "border-success" : task.DueDate < DateTime.Today ? "border-danger" : "")">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <span class="badge @GetPriorityBadgeClass(task.Priority)">
                                @task.Priority
                            </span>
                            @if (!string.IsNullOrEmpty(task.Category))
                            {
                                <span class="badge bg-secondary">@task.Category</span>
                            }
                        </div>

                        <div class="card-body">
                            <h5 class="card-title">
                                @if (task.IsCompleted)
                                {
                                    <s>@task.Title</s>
                                }
                                else
                                {
                                    @task.Title
                                }
                            </h5>

                            @if (!string.IsNullOrEmpty(task.Description))
                            {
                                <p class="card-text">@task.Description</p>
                            }

                            <div class="task-meta">
                                <small class="text-muted">
                                    <strong>Due:</strong>
                                    <span class="@(task.DueDate < DateTime.Today && !task.IsCompleted ? "text-danger fw-bold" : "")">
                                        @task.DueDate.ToString("MMM dd, yyyy")
                                    </span>
                                </small>
                                <br />
                                <small class="text-muted">
                                    <strong>Created:</strong> @task.CreatedDate.ToString("MMM dd, yyyy")
                                </small>
                            </div>
                        </div>

                        <div class="card-footer">
                            <div class="btn-group w-100">
                                <form asp-action="ToggleComplete" method="post" class="d-inline">
                                    <input type="hidden" name="id" value="@task.Id" />
                                    <button type="submit" class="btn @(task.IsCompleted ? "btn-warning" : "btn-success") btn-sm">
                                        @if (task.IsCompleted)
                                        {
                                            <i class="bi bi-arrow-counterclockwise"></i>
                                        }
                                        else
                                        {
                                            <i class="bi bi-check-circle"></i>
                                        }
                                    </button>
                                </form>

                                <a asp-action="Details" asp-route-id="@task.Id" class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@task.Id" class="btn btn-outline-warning btn-sm">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@task.Id" class="btn btn-outline-danger btn-sm">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <div class="alert alert-info">
                <h4>No tasks found!</h4>
                <p>You don't have any tasks matching your filters.</p>
                <a asp-action="Create" class="btn btn-primary">Create Your First Task</a>
            </div>
        </div>
    }
</div>

@functions {
    string GetPriorityBadgeClass(Priority priority)
    {
        return priority switch
        {
            Priority.Low => "bg-secondary",
            Priority.Medium => "bg-info",
            Priority.High => "bg-warning",
            Priority.Urgent => "bg-danger",
            _ => "bg-secondary"
        };
    }
}

<style>
    .card {
        transition: transform 0.2s;
    }

    .card:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }

    .btn-group .btn {
        flex: 1;
    }
</style>
