@model TaskItem

@{
    ViewData["Title"] = "Task Details";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h2>Task Details</h2>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>

            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">@Model.Title</h4>

                    <div class="mb-3">
                        @if (Model.IsCompleted)
                        {
                            <span class="badge bg-success">Completed</span>
                        }
                        else
                        {
                            <span class="badge bg-warning">Pending</span>
                        }
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <div class="mb-3">
                            <strong>Description:</strong>
                            <p class="mt-1">@Model.Description</p>
                        </div>
                    }

                    <dl class="row">
                        <dt class="col-sm-3">Priority:</dt>
                        <dd class="col-sm-9">
                            <span class="badge @GetPriorityBadge(Model.Priority)">
                                @Model.Priority
                            </span>
                        </dd>

                        <dt class="col-sm-3">Category:</dt>
                        <dd class="col-sm-9">@(Model.Category ?? "No category")</dd>

                        <dt class="col-sm-3">Due Date:</dt>
                        <dd class="col-sm-9 @(Model.DueDate < DateTime.Today && !Model.IsCompleted ? "text-danger" : "")">
                            @Model.DueDate.ToString("MMM dd, yyyy")
                            @if (Model.DueDate < DateTime.Today && !Model.IsCompleted)
                            {
                                <span class="badge bg-danger ms-1">Overdue</span>
                            }
                        </dd>

                        <dt class="col-sm-3">Created:</dt>
                        <dd class="col-sm-9">@Model.CreatedDate.ToString("MMM dd, yyyy")</dd>
                    </dl>

                    <div class="mt-4">
                        <form asp-action="ToggleComplete" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@Model.Id" />
                            <button type="submit" class="btn @(Model.IsCompleted ? "btn-warning" : "btn-success") me-2">
                                @(Model.IsCompleted ? "Mark Incomplete" : "Mark Complete")
                            </button>
                        </form>

                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary me-2">Edit</a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    string GetPriorityBadge(Priority priority)
    {
        return priority switch
        {
            Priority.Low => "bg-secondary",
            Priority.Medium => "bg-info",
            Priority.High => "bg-warning",
            Priority.Urgent => "bg-danger",
            _ => "bg-secondary"
        };
    }
}