@model TaskItem

@{
    ViewData["Title"] = "Delete Task";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="text-danger">Delete Task</h2>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>

            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">Confirm Deletion</h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <strong>Warning!</strong> Are you sure you want to delete this task? This action cannot be undone.
                    </div>

                    <dl class="row">
                        <dt class="col-sm-4">Title:</dt>
                        <dd class="col-sm-8">@Model.Title</dd>

                        <dt class="col-sm-4">Priority:</dt>
                        <dd class="col-sm-8">@Model.Priority</dd>

                        <dt class="col-sm-4">Due Date:</dt>
                        <dd class="col-sm-8">@Model.DueDate.ToString("MMM dd, yyyy")</dd>

                        @if (!string.IsNullOrEmpty(Model.Category))
                        {
                            <dt class="col-sm-4">Category:</dt>
                            <dd class="col-sm-8">@Model.Category</dd>
                        }
                    </dl>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-danger">Delete Task</button>
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>